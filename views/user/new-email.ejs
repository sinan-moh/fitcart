<%- include("../../views/pratials/user/header") %>


<style>
  /* General Page Styling */
  body {
    font-family: 'Roboto', sans-serif;
    background-color: #f8f9fa;
    color: #333;
  }

  .main {
    padding: 30px 0;
  }

  .email-update-container {
    background-color: #fff;
    border-radius: 10px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    padding: 30px;
    max-width: 500px;
    margin: 50px auto;
  }

  .email-update-header {
    text-align: center;
    font-size: 24px;
    font-weight: bold;
    color: #007bff;
    margin-bottom: 20px;
  }

  .form-group {
    margin-bottom: 20px;
  }

  .form-label {
    font-weight: bold;
    margin-bottom: 5px;
    display: block;
  }

  .form-control {
    width: 100%;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 5px;
    font-size: 16px;
    transition: border-color 0.3s ease;
  }

  .form-control:focus {
    border-color: #007bff;
    outline: none;
  }

  .btn-submit {
    background-color: #007bff;
    color: white;
    border: none;
    padding: 10px 20px;
    font-size: 16px;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .btn-submit:hover {
    background-color: #0056b3;
  }

  .text-center {
    text-align: center;
  }

  .alert {
    margin-bottom: 20px;
    padding: 10px;
    border-radius: 5px;
    font-size: 14px;
    background-color: #f8d7da;
    color: #721c24;
    border: 1px solid #f5c6cb;
  }
</style>

<main class="main">
  <div class="email-update-container">
    <div class="email-update-header">
      Update Email
    </div>
    
    <!-- Alert for error/success messages -->
    <% if (message) { %>
      <div class="alert">
        <%= message %>
      </div>
    <% } %>

    <form action="/update-email" method="POST">
      <div class="form-group">
        <label for="new-email" class="form-label">New Email Address</label>
        <input 
          type="email" 
          id="new-email" 
          name="newEmail" 
          class="form-control" 
          placeholder="Enter your new email address" 
          required 
        />
      </div>

      <div class="text-center">
        <button type="submit" class="btn-submit">Update Email</button>
      </div>
    </form>
  </div>
</main>

<%- include("../../views/pratials/user/footer") %>

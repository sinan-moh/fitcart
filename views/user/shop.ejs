<%- include("../../views/pratials/user/header") %>
    <style>
        .main-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
            display: flex;
            gap: 20px;
        }

        /* Sidebar for filters */
        .sidebar {
            width: 300px;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 8px;
            background-color: #f9f9f9;
        }

        .filter-section {
            margin-bottom: 20px;
        }

        .filter-title {
            font-weight: bold;
            font-size: 16px;
            margin-bottom: 10px;
            color: #1e918b;
            /* Changed color for "Categories" and "Brands" titles */
        }

        .filter-item {
            margin: 5px 0;
        }

        /* Remove underline for all links */
        a {
            text-decoration: none;
        }

        a:hover {
            text-decoration: underline;
            /* Optional hover effect */
        }

        .price-filter .price-options {
            display: flex;
            flex-direction: column;
            gap: 10px;
        }

        .price-button {
            padding: 8px 15px;
            background-color: #f1f1f1;
            border: 1px solid #ddd;
            border-radius: 5px;
            cursor: pointer;
            font-size: 14px;
            transition: background-color 0.3s, transform 0.2s;
        }

        .price-button:hover {
            background-color: #007bff;
            color: white;
            transform: scale(1.05);
        }

        /* Main content area for products */
        .product-grid-container {
            flex: 1;
        }

        .shop-topbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .search-form {
            display: flex;
            align-items: center;
            background-color: #f1f1f1;
            border-radius: 25px;
            overflow: hidden;
            max-width: 300px;
        }

        .search-input {
            flex: 1;
            padding: 8px;
            border: none;
            outline: none;
            background-color: transparent;
        }

        .search-button {
            background-color: #1e918b;
            color: white;
            padding: 8px 15px;
            border: none;
            cursor: pointer;
            border-radius: 25px;
        }

        .product-grid {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
        }

        .product-card {
            width: calc(33.333% - 20px);
            border: 1px solid #ddd;
            padding: 15px;
            border-radius: 8px;
            text-align: center;
            background-color: white;
            position: relative;
        }

        .product-card img {
            max-width: 100%;
            height: 200px;
            /* Set a fixed height for consistent alignment */
            object-fit: cover;
            /* Ensure images are cropped proportionally */
            border-radius: 5px;
        }

        .product-card h4 {
            font-size: 16px;
            font-weight: 600;
            margin: 10px 0;
            color: #333;
            text-align: center;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .product-card p {
            font-size: 14px;
            color: #666;
            margin: 5px 0;
        }

        .wishlist-btn {
            position: absolute;
            top: 10px;
            right: 10px;
            background-color: rgba(255, 255, 255, 0.8);
            padding: 5px;
            border-radius: 50%;
            cursor: pointer;
        }

        .add-to-cart-btn {
            background-color: #46698f;
            color: white;
            padding: 10px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            margin-top: 10px;
            width: 100%;
        }

        .add-to-cart-btn:hover {
            background-color: #35527a;
        }

        /* Pagination */
        .pagination {
            display: flex;
            justify-content: center;
            gap: 10px;
            margin: 20px 0;
        }

        .pagination a {
            padding: 8px 12px;
            background-color: #f1f1f1;
            color: #333;
            border-radius: 5px;
            text-decoration: none;
            border: 1px solid #ddd;
        }

        .pagination a.active {
            background-color: #007bff;
            color: white;
        }

         a.btn-wishlist {
            text-decoration: none;
            position: absolute;
            top: 20px;
            right: 20px;
            width: 50px;
            height: 50px;
            border-radius: 50px;
            display: flex;
            align-items: center;
            justify-content: center;
            background: #fff;
            border: 1px solid #d8d8d8;
            transition: all 0.3s ease-out;
        }

        a.btn-wishlist:hover {
            background: rgb(240, 56, 56);
            color: #fff;
        }
    </style>

    <div class="main-container">
        <!-- Sidebar for Filters -->
        <aside class="sidebar">
            <h4>Filter</h4>
          
            <form action="/search" method="get">
              <!-- Category Filter -->
              <div>Select Category</div>
              <select class="form-select" name="searchCategory">
                <option value="">Select Category</option>
                <% for (let ele of category) { %>
                  <option value="<%= ele._id %>" <%= searchCategory === ele._id.toString() ? 'selected' : '' %>><%= ele.name %></option>
                <% } %>
              </select>
          
              <!-- Brand Filter -->
              <div class="pt-3">Select Brand</div>
              <select class="form-select" name="searchBrand">
                <option value="">Select Brand</option>
                <% for (let i = 0; i < brand.length; i++) { %>
                  <option value="<%= brand[i].brandName %>" <%= searchBrand === brand[i].brandName ? 'selected' : '' %>><%= brand[i].brandName %></option>
                <% } %>
              </select>
          
              <!-- Price Range Filter -->
              <div class="pt-3">Select Price Range</div>
              <select class="form-select" name="selectedPrice">
                <option value="" <%= !selectedPrice ? 'selected' : '' %>>Select Price Range</option>
                <option value="0-500" <%= selectedPrice === '0-500' ? 'selected' : '' %>>Under ‚Çπ500</option>
                <option value="500-1000" <%= selectedPrice === '500-1000' ? 'selected' : '' %>>‚Çπ500 - ‚Çπ1000</option>
                <option value="1000-1500" <%= selectedPrice === '1000-1500' ? 'selected' : '' %>>‚Çπ1000 - ‚Çπ1500</option>
                <option value="1500-2000" <%= selectedPrice === '1500-2000' ? 'selected' : '' %>>‚Çπ1500 - ‚Çπ2000</option>
                <option value="2000+" <%= selectedPrice === '2000+' ? 'selected' : '' %>>Above ‚Çπ2000</option>
              </select>
          
              <!-- Sort Price -->
              <div class="pt-3">Sort By Price</div>
              <select class="form-select" name="priceSort">
                <option value="">Select Sorting</option>
                <option value="lowToHigh" <%= priceSort === 'lowToHigh' ? 'selected' : '' %>>Low to High</option>
                <option value="highToLow" <%= priceSort === 'highToLow' ? 'selected' : '' %>>High to Low</option>
              </select>
          
              <!-- Hidden Search Query -->
              <input type="text" name="query" value="<%= query %>" hidden>
          
              <!-- Buttons -->
              <div class="mt-3 d-flex justify-content-between">
                <button type="submit" class="btn btn-primary">Apply Filter</button>
                <a href="/shop" class="btn btn-secondary">Clear Filter</a>
              </div>
            </form>
          </aside>
          



        <!-- Main Product Grid -->
        <div class="product-grid-container">
            <div class="shop-topbar">
                <form action="/search" method="GET" class="search-form">
                    <input  type="text" 
                    name="query" 
                    placeholder="Search items..." 
                    class="search-input" 
                    value="<%= query || '' %>" 
                    id="searchInput">
                    <button type="submit" class="search-button">Search</button>
                </form>
            </div>

            <div class="product-grid">
                <% products.forEach((product)=> { %>
                    <div class="product-card">
                        <% if (wishlist && wishlist.products && wishlist.products.some(item=> item.productId.toString()
                            === product._id.toString())) { %>
                            <a href="#" class="btn-wishlist addToWishlist" data-product-id="<%= product._id %>"
                                onclick="removeproduct('<%= product._id %>')">
                                <span productId="<%= product._id %>">‚ù§Ô∏è</span>
                            </a>
                            <% } else { %>
                                <a href="#" class="btn-wishlist removeproduct" data-product-id="<%= product._id %>"
                              onclick="addToWishlist('<%= product._id %>')">
                              <span class="heart-active" productId="<%= product._id %>">ü§ç</span>
                            </a>
                                <% } %>
                                    <a href="/productDetails?id=<%= product._id %>">
                                        <img src="/uploads/re-image/<%= product.productImage[0] %>"
                                            alt="<%= product.productName %>">
                                        <h4>
                                            <%= product.productName %>
                                        </h4>
                                        <p>Brand: <%= product.brand %>
                                        </p>
                                        <p>‚Çπ<%= product.salePrice.toLocaleString('en-IN') %>
                                                <span class="text-muted"><strike>‚Çπ<%=
                                                            product.regularPrice.toLocaleString('en-IN') %>
                                                            </strike></span>
                                        </p>
                                    </a>
                                    <a href="javascript:void(0);" class="add-to-cart-btn" onclick="addToCart(
                        '<%= product._id %>', 1, 
                        '<%= product.flavours[0] %>', 
                        '<%= product.weights[0] %>', 
                        '<%= product.productName %>', 
                        '<%= product.productImage[0] %>', 
                        '<%= product.regularPrice %>', 
                        '<%= product.salePrice %>', 
                        '<%= product.discount %>')">Add to Cart</a>
                    </div>
                    <% }); %>
            </div>



            <!-- Pagination -->
            <div class="pagination">
                <% if (currentPage> 1) { %>
                    <a class="btn" href="/shop?page=<%= currentPage - 1 %>">Prev</a>
                    <% } %>

                        <% for (let i=1; i <=totalPages; i++) { %>
                            <a class="btn <%= currentPage === i ? 'active' : '' %>" href="/shop?page=<%= i %>">
                                <%= i %>
                            </a>
                            <% } %>

                                <% if (currentPage < totalPages) { %>
                                    <a class="btn" href="/shop?page=<%= currentPage + 1 %>">Next</a>
                                    <% } %>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>


        function addToCart(productId, quantity, flavours, weights, productName, productImage, regularPrice, salePrice, discount) {
            // Send an AJAX request to add the product to the cart
            $.ajax({
                url: '/addCart',  // The route to your add-to-cart endpoint
                method: 'POST',
                data: {
                    productId: productId,
                    quantity: quantity,
                    flavours: flavours,
                    weights: weights,
                    productName: productName,
                    productImage: productImage,
                    regularPrice: regularPrice,
                    salePrice: salePrice,
                    discount: discount
                },
                success: function (response) {
                    if (response.success) {
                        Swal.fire({
                            title: 'Added to Cart',
                            text: response.message,
                            icon: 'success',
                            timer: 2000,
                            showConfirmButton: false
                        });
                    } else {
                        Swal.fire({
                            title: 'Error',
                            text: response.message,
                            icon: 'error',
                            timer: 2000,
                            showConfirmButton: false
                        });
                    }
                },
                error: function (error) {
                    Swal.fire({
                        title: 'Error',
                        text: 'There was an error adding the product to your cart.',
                        icon: 'error',
                        timer: 2000,
                        showConfirmButton: false
                    });
                }
            });
        }




        function addToWishlist(productId) {
            $.ajax({
                url: "/addToWishlist",
                method: 'POST',
                data: { productId: productId },
                success: (response) => {
                    if (response.status) {

                        Swal.fire({
                            title: 'addted to wishlist',
                            text: 'The product has been added to your wishlist',
                            icon: 'success',
                            time: 2000

                        })
                    } else {
                        Swal.fire({
                            title: 'Already in wishlist to wishlist',
                            text: response.message,
                            icon: 'error',
                            time: 2000
                        })
                    }
                },
                error: (error) => {
                    Swal.fire({
                        title: 'Error',
                        text: "there was an error adding the product to your wishlist ",
                        icon: 'error',
                        time: 2000
                    })
                }
            })
            console.log('Add to wishlist:', productId);
        }

        function removeproduct(productId) {
            $.ajax({
                url: `/wishlist/removewishlist/${productId}`, // Include productId in the URL as per your backend
                method: "DELETE", // Matches the backend HTTP method
                success: (response) => {
                    if (response.status) {
                        Swal.fire({
                            title: '',
                            text: 'The product has been removed from your wishlist',
                            icon: 'success',
                            timer: 2000,
                            showConfirmButton: false,
                        });

                        // Optionally, remove the product from the UI
                        $(`[data-product-id="${productId}"]`).closest('.product-card').remove();
                    } else {
                        Swal.fire({
                            title: 'Error',
                            text: response.message || 'Failed to remove product from wishlist.',
                            icon: 'error',
                            showConfirmButton: false,
                        });
                    }
                },
                error: (error) => {
                    Swal.fire({
                        title: 'Error',
                        text: 'There was an error removing the product from your wishlist.',
                        icon: 'error',
                        showConfirmButton: false,
                    });
                },
            });
        }
    </script>
    <%- include("../../views/pratials/user/footer") %>